# Server
PORT=8000
MONGO_URI="<your_mongo_connection_string>"
NODE_ENV="development"   # use "development" or "production"
IS_UNDER_KUBERNETES="false"

# Bot / 3rd-party APIs
GROQ_API_KEY="<your_groq_api_key>"

# JWT / secrets
ACCESS_TOKEN_SECRET="<your_access_token_secret>"
REFRESH_TOKEN_SECRET="<your_refresh_token_secret>"
OTP_SECRET="<your_otp_secret>"
ACCESS_KEY_CREDENTIALS_SECRET="<your_access_key_credentials_secret>"
SECRET_ACCESS_KEY_CREDENTIALS_SECRET="<your_secret_access_key_credentials_secret>"

# AWS credentials (use IAM user or role)
ACCESS_KEY_ID="<your_aws_access_key_id>"
SECRET_ACCESS_KEY="<your_aws_secret_access_key>"
MY_BUCKET_NAME="<your_s3_bucket_name>"
BUCKET_HOST_FOR_HOSTING="<your_s3_bucket_host_url_or_console_link>"
HOSTING_DOMAIN="<your_hosting_domain>"

# Message Queue (e.g., Redis)
QUEUE_HOST="localhost"
QUEUE_USER="default"
QUEUE_PASSWORD="<your_queue_password>"
QUEUE_PORT=6379

# Payment Gateway (Cashfree)
CASHFREE_APP_KEY="<your_cashfree_app_key>"
CASHFREE_APP_SECRET_KEY="<your_cashfree_app_secret_key>"

# Service Charges (example defaults)
TRANSCODER_SERVICE_CHARGE=0.25
HOSTING_SERVICE_CHARGE_PER_30_DAYS=80

# Web client origin(s) for CORS (comma-separated)
CLIENT_ORIGIN="http://localhost:5173"

# Pricing
STORAGE_PRICE_PER_GB_PER_MONTH_IN_RUPEES=15

# Container Service (when running locally)
CONTAINER_SERVICE_HOST=localhost
CONTAINER_SERVICE_PORT=4000